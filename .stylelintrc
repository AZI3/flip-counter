{
  "extends": "stylelint-config-standard",
  "rules": {
    "declaration-block-trailing-semicolon": null,
    "color-hex-length": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function"
      ]
    }]
  }
}